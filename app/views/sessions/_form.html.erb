<div class="form">
<%= form_tag sessions_path, :class => :formtastic do %>
  <li>
    <%= label_tag :login, t(:username_or_email_address) %>
    <%= text_field_tag :login, params[:login] %>
  </li>
  <li>
    <%= label_tag :password, t('formtastic.labels.password') %>
    <%= password_field_tag :password %>
  </li>
  <p><%= submit_tag t(:log_in), :class => :submit %></p>
<% end %>
</div> 
