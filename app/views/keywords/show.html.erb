<% title @keyword.name %>

<div class="form">
<% unless @articles.empty? %>
<div id="articles">
  <strong><%= pl(:article) %>:</strong>
  <ol>
  <% @articles.each do |article| %>
  <li>
    <div>
      <%= render "articles/long_reference", :article => article, :no => nil, :note => "bajs" %>
    </div>
  </li>
  <% end %>    
  </ol>
</div>
<% end %>

<div id="bottom_links">
  <%= link_to t(:edit), edit_keyword_path(@keyword) if can? :edit, @keyword %> 
  <% if can? :destroy, @keyword %>
    | <%= link_to t(:delete), @keyword, :confirm => sure?, :method => :delete %>
  <% end %>
</div>
</div>
