<% title pl(:author) %>

<div class="form">
<table>
  <% for author in @authors %>
    <tr>
      <td><%= author.straight_name %></td>
      <td><%= link_to t(:show), author if can? :show, author %></td>
      <td><%= link_to t(:edit), edit_author_path(author) if can? :edit, author %></td>
      <td><%= link_to t(:del), author, :confirm => sure?, :method => :delete if can? :destroy, author %></td>
    </tr>
  <% end %>
</table>
<div id="bottom_links"><%= link_to new(:author), new_author_path if can? :new, Author %></div>
</div>

