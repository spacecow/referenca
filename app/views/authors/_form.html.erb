<div class="form">
<%= semantic_form_for @author do |f| %>
  <%= f.input :first_name %>
  <%= f.input :middle_names %>
  <%= f.input :last_name %>
  <%= hidden_field_tag :article_id, @article.new_record? ? "nil" : @article.id if article_page %>
  <%= f.submit button_label, :class => :submit %>
  <%= yield :link %>
<% end %>
</div>
