<% title pl(:article) %>
<div class="form">

<%= form_tag articles_path, :method => 'get', :id => "articles_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= select_tag :sort, options_for_select([[t('formtastic.labels.title'),'title'],[t(:author),['first_name','middle_names','last_name']],[t('formtastic.labels.year'),'year'],[t(:keyword),'keywords.name']], @sort) %>
    <%= submit_tag t(:search), :name => nil, :class => :commit %>
  </p>
<% end %>
<br />

<table id="articles">
  <%= render "articles", :articles => @articles %>
</table>
<br />
<%= will_paginate @articles %>

<div id="bottom_links"><%= link_to new(:article), new_article_path if can? :new, Article%></div>
</div>
